{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Methane Emissions 2019-2021",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
    "url": "ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
    {
    "lookup": "properties.NAME",
    "from": {
    "data": {
    "url": "methane.csv"
    },
    "key": "country",
    "fields": ["emissions"]
    }
}
],
"mark": {"type": "geoshape", "stroke": "lightgray"},
"encoding": {
"color": {
"field": "emissions",
"type": "quantitative"
},
"tooltip": [
{"field": "properties.NAME", "type": "nominal", "title":
"Country"},
{"field": "emissions", "type": "quantitative"}
]
}
}