{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Emissions in 2019-2021" },
    "data": {
    "url": "methane.csv"
    },
    "transform": [{"filter": "datum.emissions>5000"}],
    "mark": "bar",
    "encoding": {
    "x": { "field": "country", "type": "nominal", "title": "Country" },
    "y": { "field": "emissions", "type": "quantitative", "title": "Emissions (kT"},
    "color":{
        "field": "type",
        "type": "nominal",
        "scale": {"domain": ["Agriculture", "Waste", "Other"],
                    "range": ["#3b722e", "#fbb89e", "#c1cdc1"]},
                    "title": "Emission Type"
    }
}
    }
